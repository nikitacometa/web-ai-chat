# Generate a random secret: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
AUTH_SECRET=****

# Get your xAI API Key here for chat and image models: https://console.x.ai/
XAI_API_KEY=****

# Instructions to create a Vercel Blob Store here: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=****

POSTGRES_URL=postgres://postgres:postgres@postgres:5432/ai_chat_db
REDIS_URL=redis://redis:6379

# MongoDB
MONGODB_PORT=27017           # Port MongoDB will listen on (default: 27017)
MONGODB_USERNAME=admin       # MongoDB root username
MONGODB_PASSWORD=admin123    # MongoDB root password
MONGODB_DB=ai_chat_db        # Name of the MongoDB database

# Redis
REDIS_PORT=6379              # Port Redis will listen on (default: 6379)

# Backend (FastAPI)
BACKEND_PORT=8000            # Port for FastAPI backend (default: 8000)

# Web UI (Next.js)
WEB_PORT=3000                # Port for Next.js web UI (default: 3000)
NEXT_PUBLIC_API_URL=http://backend:8000/api/v1  # Public API URL for frontend to call backend
